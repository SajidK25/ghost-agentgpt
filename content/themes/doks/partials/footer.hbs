<footer data-footer class="{{{block "extra-footer-class"}}} group flex-none mt-auto text-sm text-gray-500 dark:text-gray-400 [&.no-space-top]:mt-0">
    <div class="outer xl:outer-xl mt-24 pb-28 border-t border-gray-900/10 dark:border-gray-50/5 group-[.no-space-top]:mt-0">
        <div class="inner">
            <div class="flex flex-col lg:flex-row lg:items-center py-10">
                <div>
                    <a data-brand class="flex-none inline-flex font-bold text-lg text-gray-900 dark:text-gray-50" href="{{@site.url}}" aria-label="{{@site.title}}">
                        {{#if @site.logo}}
                            {{#if @custom.dark_theme_logo}}
                                <img class="max-h-9 w-auto hidden dark:block" src="{{@custom.dark_theme_logo}}" alt="{{@site.title}}"/>
                                <img class="max-h-9 w-auto block dark:hidden" src="{{@site.logo}}" alt="{{@site.title}}"/>
                            {{else}}
                                <img class="max-h-9 w-auto" src="{{@site.logo}}" alt="{{@site.title}}"/>
                            {{/if}}
                        {{else}}
                            {{@site.title}}
                        {{/if}}
                    </a>
                    {{#if @site.description}}
                        <div class="mt-2 text-base max-w-md">
                            {{@site.description}}
                        </div>
                    {{/if}}
                </div>

                {{#if @site.members_enabled}}
                    <div class="flex-none lg:max-w-sm lg:ml-auto mt-10 lg:mt-0 pt-10 lg:pt-0 border-t border-gray-900/5 dark:border-gray-50/5 lg:border-none">
                        <div class="">
                            <h2 class="font-bold text-base text-gray-900 dark:text-gray-200">
                                {{@custom.email_signup_title}}
                            </h2>
                            <p class="mt-0.5 text-sm text-gray-500 dark:text-gray-400">
                                {{{@custom.email_signup_description}}}
                            </p>
                        </div>
                        <button data-portal="signup" class="flex items-center h-9 px-4 mt-4 w-full max-w-md lg:min-w-[theme(spacing.80)] ring-1 ring-gray-900/10 rounded-md text-gray-500 text-sm bg-white/90 hover:bg-gray-50/90 hover:ring-gray-900/20 dark:text-gray-400/90 dark:bg-gray-800 dark:hover:bg-gray-700 dark:ring-inset dark:ring-gray-50/10">
                            <span>{{t "Enter your email"}}</span>
                            <span class="ml-auto font-bold text-gray-900 dark:text-gray-200">
                                {{t "Subscribe"}}
                            </span>
                        </button>
                    </div>
                {{/if}}
            </div>

            <div class="pt-10 border-t border-gray-900/5 dark:border-gray-50/5">
                {{navigation type="secondary"}}
            </div>

            <div class="flex flex-col-reverse lg:flex-row lg:items-center mt-6 lg:mt-3">
                <div class="text-xs mb-3 mr-5">
                    <a href="{{@site.url}}">{{@site.title}}</a> &copy; {{date format="YYYY"}} 
                    <span data-published-with>
                        <span class="">â€¢</span>
                        {{{t "Published with {ghost-link} and {theme-link}" ghost-link="<a class='font-semibold hover:opacity-80' href='https://ghost.org/' target='_blank' rel='noopener'>Ghost</a>" theme-link="<a class='font-semibold hover:opacity-80' href='https://spiritix.co/themes/doks' target='_blank' rel='noopener'>Spiritix</a>" }}}
                    </span>
                </div>

                <div class="mb-6 lg:mb-0 lg:ml-auto flex flex-wrap items-center text-gray-400">
                    <button data-theme-toggle class="mb-3 mr-5 last:mr-0 inline-flex flex-shrink-0" title="{{t "Change theme"}}" aria-label="{{t "Change theme"}}">
                        {{> icons/sun class="dark:hidden w-5 h-5 lg:w-5 lg:h-5 hover:opacity-80" }}
                        {{> icons/moon class="hidden dark:inline w-5 h-5 lg:w-4 lg:h-4 relative -top-px hover:opacity-80" }}
                    </button>                    
                    {{> social-links linkClass="mb-3 mr-5 last:mr-0" iconClass="w-5 h-5 lg:w-4 lg:h-4 hover:opacity-80" }}                      
                </div>
            </div>
        </div>
    </div>
</footer>